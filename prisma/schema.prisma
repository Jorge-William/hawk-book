generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator erd {
  provider = "prisma-erd-generator"
}

model Candidato {
  id              String            @id @default(uuid())
  nome            String
  cpf_num         String
  data_nascimento DateTime?
  nome_da_mae     String
  nome_do_pai     String
  cnh_categoria   String
  cnv_status      Boolean
  telefone        String
  peso            Int
  altura          Int
  endereco        String
  bairro          String
  cep             Int
  curso_candidato Curso_candidato[]
  img_frente      String
  img_perfil      String

  @@unique([cpf_num])
  @@map("candidatos")
}

model Curso {
  id              String            @id @default(uuid())
  nome_curso      String
  descricao_curso String
  candidato       Curso_candidato[]

  @@unique([nome_curso])
  @@map("cursos")
}

model Curso_candidato {
  id           String     @id @default(uuid())
  Candidato    Candidato? @relation(fields: [candidato_id], references: [id])
  Curso        Curso?     @relation(fields: [curso_id], references: [id])
  candidato_id String
  curso_id     String

  @@unique([candidato_id, curso_id])
  @@map("curso_candidato")
}
